<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/unique_item_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Avatar Section -->
        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="64dp">

            <!-- Avatar background -->
            <View
                android:id="@+id/avatar_bg"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/avatar_circle_bg"/>

            <!-- Initial text -->
            <TextView
                android:id="@+id/text_name_initial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="A"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <!-- Status indicator dot -->
            <View
                android:id="@+id/status_indicator"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/status_online"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"/>
        </RelativeLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Name with Favorite Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E293B"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <ImageButton
                    android:id="@+id/btn_favorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_star_outline"
                    android:contentDescription="Favorite"/>
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="14sp"
                android:textColor="#64748B"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Age Badge -->
            <TextView
                android:id="@+id/text_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 years"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#0F766E"
                android:background="@drawable/age_badge_bg"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Arrow indicator -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€º"
            android:textSize="28sp"
            android:textColor="#CBD5E1"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>